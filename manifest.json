{
	"manifest_version" : 2,
    "name": "Jenkins Notifier for Chrome™ Plus",
    "version": "0.1.1",
    "icons": {
        "128": "img/blue.gif",
        "48": "img/blue.gif",
        "16": "img/blue.gif"
    },
    "options_page": "options.html",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Jenkins Notifier for Chrome™ Plus",
        "default_popup": "popup.html"
    },
    "permissions": [
    	"storage",
        "background",
        "notifications",
        "http://*/",
        "https://*/"
    ],
    "web_accessible_resources" : [
    	"css/main.css",
    	"css/bootstrap.css",
    	"css/popup.css",
    	"js/angular-0.9.19.js",
    	"js/bootstrap.js",
    	"js/jquery-1.9.1.js",
    	"js/controller.js"
    ]
}
